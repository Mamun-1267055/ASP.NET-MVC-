@model IEnumerable<Work1.Models.Employee>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col">
        <h2>Toy List</h2>
        <div class="d-flex justify-content-end">
            <a href="@Url.Action("Create","Employees")" class="btn btn-outline-primary btn-sm"><i class="bi bi-plus"></i> Add New</a>
        </div>
        <table class="table table-bordered table-striped table-sm table-hover">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.EmpName)</th>
                    <th>@Html.DisplayNameFor(x => x.Phone)</th>
                    <th>@Html.DisplayNameFor(x => x.Department)</th>
                    <th>@Html.DisplayNameFor(x => x.Picture)</th>
                    <th class="text-center">Actions</th>
                    <th>...</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(x => t.EmpName)</td>
                    <td>@Html.DisplayFor(x => t.Phone)</td>
                    <td>@Html.DisplayFor(x =>t.Department)</td>
                   
                    <td>
                        <img src="@Url.Content(t.Picture)" width="60" />
                    </td>
                   
                    <td>
                        <a href="@Url.Action("Edit","Employees",new { id=t.EmpId})" class="btn btn-outline-success btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                        <a href="@Url.Action("Delete","Employees",new { id=t.EmpId})" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


