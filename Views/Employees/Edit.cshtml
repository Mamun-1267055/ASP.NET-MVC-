@model Work1.Models.viewmodel.EmpVM
@{
    ViewBag.Title = "Edit";
}



<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("Edit", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h2 class="display-4">Edit @Model.EmpName</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(x=>x.EmpId)
            @Html.HiddenFor(x => x.Phone)
            <div class="row mb-2">
                @Html.LabelFor(x => x.EmpName, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.EmpName, new { @class = "form-control form-control-sm r" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.EmpName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-2">
                @Html.LabelFor(x => x.Phone, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control form-control-sm r" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-2">
                @Html.LabelFor(x => x.Department, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.DropDownListFor(x => x.Department, ViewBag.depts as SelectList, "----Select-----", new { @class = "form-control form-control-sm r" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Department, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-2">
                @Html.LabelFor(x => x.image, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.image, new { @class = "form-control form-control-sm r", type = "file" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.image, "", new { @class = "text-danger" })
                </div>
            </div>
          
            <div class="row mb-2">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-primary btn-sm">Update</button>
                </div>
            </div>
        }
    </div>
</div>




